<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Code"
                android:textStyle="italic"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:id="@+id/tvCode_internalItem"/>

            <TextView
                android:id="@+id/tvSubject_internalItem"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tvCode_internalItem"
                android:layout_marginStart="2dp"
                android:layout_toStartOf="@id/tvScore_internalItem"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Subject"
                android:textStyle="italic"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tvScore_internalItem"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Score"
                android:textStyle="italic|bold"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>






</RelativeLayout>